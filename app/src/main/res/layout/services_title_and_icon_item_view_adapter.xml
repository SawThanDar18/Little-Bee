<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin16"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="@dimen/margin10"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_marginTop="@dimen/margin10"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin6"
        android:gravity="center"
        android:id="@+id/productImage"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/serviceIcon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_gold_circle"
            android:layout_width="@dimen/width60"
            android:layout_height="@dimen/height60"
            android:padding="@dimen/padding10"
            android:src="@drawable/icon_cleaning__1200_x_1200_px_" />


    </LinearLayout>

    <TextView
        android:layout_marginBottom="@dimen/margin10"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/padding1"
        android:id="@+id/service_name"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="@dimen/fontSizeSmall"
        android:layout_gravity="center"
        android:singleLine="false"
        android:text="Cleaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>