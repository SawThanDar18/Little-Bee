<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding10"
    android:background="@drawable/dialog_corner"
    android:minWidth="300dp">

    <LinearLayout
        android:padding="@dimen/padding4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/padding2"
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/txt_limit_photo"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSizeMedium"
            android:gravity="center"
            android:text=""
            android:minLines="3"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="@dimen/fontSizeMedium"
            android:layout_marginTop="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin4"
            android:id="@+id/btn_ok"
            android:background="@drawable/round_corner_theme_bg"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="@string/do_ok"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

</LinearLayout>