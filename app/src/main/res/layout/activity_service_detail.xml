<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/service_detail_tool_bar_layout" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height160"
            android:layout_marginHorizontal="@dimen/margin16"
            android:layout_marginVertical="@dimen/margin10"
            android:visibility="gone"
            app:auto_show="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:resize_mode="fill"
            app:use_controller="false" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/service_detail_recyclerview"
            android:layout_below="@id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/continue_layout" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/continue_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height60"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/gold_bg"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cartCountText"
                    android:layout_width="@dimen/width30"
                    android:layout_height="@dimen/height30"
                    android:layout_marginStart="@dimen/margin10"
                    android:background="@drawable/circle_with_pink_accent_border"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontSizeMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amountText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:padding="@dimen/padding15"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontSizeMedium"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/conView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:drawableEnd="@drawable/arrow_forward_icon"
                android:gravity="center"
                android:padding="@dimen/padding15"
                android:text="@string/continues"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium"
                android:textStyle="bold" />

        </LinearLayout>

        <include layout="@layout/material_loader_layout" />

    </RelativeLayout>


</LinearLayout>