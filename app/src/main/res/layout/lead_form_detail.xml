<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/confirm_price_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Price"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium" />

            <TextView
                android:id="@+id/confirm_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_price_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/round_corner_grey_stroke_color"
                android:padding="@dimen/padding8"
                android:text="300000"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_price"
                android:layout_marginTop="@dimen/margin8"
                android:text="@string/lead_form_title_label"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/round_corner_grey_stroke_color"
                android:padding="@dimen/padding8"
                android:text="Painting"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/budget_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/margin8"
                android:text="@string/lead_form_budget_label"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium" />

            <TextView
                android:id="@+id/budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/budget_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/round_corner_grey_stroke_color"
                android:padding="@dimen/padding8"
                android:text="200000"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sqfeet_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/budget"
                android:layout_marginTop="@dimen/margin8"
                android:text="@string/lead_form_sqfeet_label"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium" />

            <LinearLayout
                android:id="@+id/sqfeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/sqfeet_lbl"
                android:weightSum="5">

                <TextView
                    android:id="@+id/first_square_feet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin24"
                    android:layout_marginTop="@dimen/margin4"
                    android:layout_weight="2"
                    android:background="@drawable/round_corner_grey_stroke_color"
                    android:gravity="center"
                    android:padding="@dimen/padding8"
                    android:text="23"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontSizeMedium"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/multiply_24" />

                <TextView
                    android:id="@+id/second_square_feet_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin24"
                    android:layout_marginTop="@dimen/margin4"
                    android:layout_weight="2"
                    android:background="@drawable/round_corner_grey_stroke_color"
                    android:gravity="center"
                    android:padding="@dimen/padding8"
                    android:text="23"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontSizeMedium"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sqfeet_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/round_corner_grey_stroke_color"
                android:padding="@dimen/padding8"
                android:text="12 x 13"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/photos_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sqfeet"
                android:layout_marginTop="@dimen/margin8"
                android:text="@string/lead_form_photo_label"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/photos_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4" />

            <TextView
                android:id="@+id/details_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photos_recyclerview"
                android:layout_marginTop="@dimen/margin8"
                android:text="@string/lead_form_detail_label"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/round_corner_grey_stroke_color"
                android:padding="@dimen/padding8"
                android:text="Painting my home"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>