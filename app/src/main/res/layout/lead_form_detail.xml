<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/confirm_price_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Price"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirm_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_price_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:padding="@dimen/padding8"
                android:background="@drawable/rounded_corner_white_color"
                android:text="300000"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_price"
                android:layout_marginTop="@dimen/margin8"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:padding="@dimen/padding8"
                android:background="@drawable/rounded_corner_white_color"
                android:text="Painting"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/budget_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/margin8"
                android:text="Budget"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/budget_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:padding="@dimen/padding8"
                android:background="@drawable/rounded_corner_white_color"
                android:text="200000"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sqfeet_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/budget"
                android:layout_marginTop="@dimen/margin8"
                android:text="Square Feet"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sqfeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sqfeet_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:padding="@dimen/padding8"
                android:background="@drawable/rounded_corner_white_color"
                android:text="12 x 13"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/photos_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sqfeet"
                android:layout_marginTop="@dimen/margin8"
                android:text="Photos"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/photos_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4" />

            <TextView
                android:id="@+id/details_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photos_recyclerview"
                android:layout_marginTop="@dimen/margin8"
                android:text="Details"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_lbl"
                android:layout_marginHorizontal="@dimen/margin24"
                android:layout_marginTop="@dimen/margin4"
                android:padding="@dimen/padding8"
                android:background="@drawable/rounded_corner_white_color"
                android:text="Painting my home"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>