<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:orientation="vertical"
        android:padding="@dimen/padding10"
        android:layout_marginTop="@dimen/margin24"
        android:background="@drawable/dialog_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/padding1"
            android:textSize="@dimen/fontSizeMedium"
            android:id="@+id/price_zero_alert_txt"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/price_zero_ok_btn"
            android:layout_marginTop="@dimen/margin20"
            android:textSize="@dimen/fontSizeMedium"
            android:textStyle="bold"
            android:background="@drawable/two_color_shape"
            android:text="OK"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/width60"
        android:layout_height="@dimen/height60"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/ic_gold_circle"
        android:src="@drawable/little_bee_logo" />

</RelativeLayout>
