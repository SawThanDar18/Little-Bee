<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/address_tool_bar_layout" />

    <RelativeLayout
        android:layout_below="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:padding="@dimen/padding10"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginBottom="@dimen/margin10"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/ic_about_jia_jie"
                android:layout_width="@dimen/width70"
                android:layout_height="@dimen/height80"/>


            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin20"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/padding1"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontSizeMedium"
                    android:gravity="center"
                    android:text="@string/v_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_gravity="center"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/fifteen_dp"
                    android:text="***********"
                    android:id="@+id/vphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:visibility="visible"
                app:cardElevation="5dp"
                android:padding="@dimen/two_dp"
                android:layout_marginTop="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_width="@dimen/two_hundred_dp"
                android:layout_height="@dimen/forty_dp">

                <EditText
                    android:id="@+id/vcode"
                    android:background="@color/white"
                    android:textSize="@dimen/fourteen_dp"
                    android:gravity="center"
                    android:textColorHint="@color/gray_light"
                    android:hint="@string/enter_code"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <in.aabhasjindal.otptextview.OtpTextView
                android:visibility="gone"
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                app:height="40dp"
                app:width="30dp"
                app:bar_enabled="true"
                app:bar_height="1dp"
                app:length="6"
                app:otp_text_size="@dimen/fourteen_dp"
                app:bar_active_color="@color/orange"/>


            <TextView
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/fourteen_dp"
                android:id="@+id/timer"
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty_five_dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textAllCaps="false"
                    android:enabled="false"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:textSize="@dimen/thirteen_dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_light"
                    android:layout_gravity="center"
                    android:id="@+id/resend_code"
                    android:background="@drawable/button_corner_gray"
                    android:text="@string/resend"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/twenty_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:textSize="@dimen/thirteen_dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/btn_continue"
                    android:background="@drawable/button_corner_orange"
                    android:text="@string/continues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <include layout="@layout/material_loader_layout" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>