<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/receipt_detail_tool_bar_layout"
        android:id="@+id/tool_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/topSeparator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height1"/>

            <LinearLayout
                android:id="@+id/h_view"
                android:layout_below="@+id/topSeparator"
                android:paddingLeft="@dimen/padding10"
                android:paddingRight="@dimen/padding10"
                android:paddingTop="@dimen/padding10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/width100"
                        app:srcCompat="@drawable/ic_little_bee_logo"
                        android:layout_height="@dimen/height100" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="@string/r_add"
                        android:textSize="@dimen/fontSizeMedium"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/h_date"
                android:padding="@dimen/padding4"
                android:layout_below="@+id/h_view"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin6"
                android:layout_marginHorizontal="@dimen/margin16">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Received From"
                        android:textSize="@dimen/fontSizeMedium"
                        android:textColor="@color/theme_color"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/rec_date"
                        android:textSize="@dimen/fontSizeMedium"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cust_name"
                        android:textSize="@dimen/fontSizeMedium"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cust_phone"
                        android:textSize="@dimen/fontSizeMedium"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/theme_color"
                        android:layout_width="wrap_content"
                        android:text="OFFICIAL RECEIPT"
                        android:textStyle="bold"
                        android:textSize="@dimen/fontSizeMedium"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="RECEIPT NO"
                            android:textSize="@dimen/fontSizeSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:text=" : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text=""
                            android:textSize="@dimen/fontSizeSmall"
                            android:padding="2dp"
                            android:id="@+id/rec_rno"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="CUSTOMER ID"
                            android:textSize="@dimen/fontSizeSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:text=" : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text=""
                            android:textSize="@dimen/fontSizeSmall"
                            android:padding="2dp"
                            android:id="@+id/cust_id"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="ORDER ID"
                            android:textSize="@dimen/fontSizeSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:text=" : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text=""
                            android:textSize="@dimen/fontSizeSmall"
                            android:padding="@dimen/padding2"
                            android:id="@+id/order_id"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_below="@+id/h_date"
                android:background="@color/light_grey"
                android:layout_width="match_parent"
                android:id="@+id/sep"
                android:layout_height="@dimen/height1"/>

            <TextView
                android:layout_below="@+id/sep"
                android:layout_width="match_parent"
                android:id="@+id/cust_add"
                android:layout_marginTop="@dimen/margin10"
                android:textSize="@dimen/fontSizeSmall"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin16"/>

            <LinearLayout
                android:id="@+id/amount_label_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cust_add"
                android:layout_marginTop="@dimen/margin10"
                android:background="@color/theme_color"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rec_dec"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:padding="@dimen/padding4"
                    android:text="@string/service"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSizeSmall"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/rec_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:padding="@dimen/padding4"
                    android:text="@string/qty"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSizeSmall"
                    android:textStyle="bold" />

                <View
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/rec_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:padding="@dimen/padding4"
                    android:text="@string/disc"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSizeSmall"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/rec_amt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:padding="@dimen/padding4"
                    android:text="@string/total"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSizeSmall"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/bottomSeparator"
                android:background="@color/white"
                android:layout_below="@+id/amount_label_layout"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/relayout"
                android:layout_below="@+id/bottomSeparator"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reycle_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/amount_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/relayout">

                <LinearLayout
                    android:id="@+id/sub_total_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_grey_stroke"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin4"
                        android:layout_weight="3.8"
                        android:gravity="right"
                        android:padding="@dimen/padding4"
                        android:text="@string/sub_total"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeSmall"
                        android:textStyle="bold" />

                    <View
                        android:layout_marginLeft="1dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#D1CBCB" />

                    <TextView
                        android:id="@+id/sub_total_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_marginBottom="@dimen/margin10"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="20000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeSmall"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discount_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_grey_stroke"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin6"
                        android:layout_weight="3.8"
                        android:gravity="right"
                        android:padding="@dimen/padding4"
                        android:text="@string/discount"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeSmall"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#D1CBCB" />

                    <TextView
                        android:id="@+id/discount_total_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_marginBottom="@dimen/margin10"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="6000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeSmall"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/promo_discount_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_grey_stroke"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin6"
                        android:layout_weight="3.8"
                        android:gravity="right"
                        android:padding="@dimen/padding4"
                        android:text="Promo Code Discount"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeSmall"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#D1CBCB" />

                    <TextView
                        android:id="@+id/promo_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_marginBottom="@dimen/margin10"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeSmall"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/total_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_grey_stroke"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin6"
                        android:layout_weight="3.8"
                        android:gravity="right"
                        android:padding="@dimen/padding4"
                        android:text="@string/total_amount"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeSmall"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#D1CBCB" />

                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10"
                        android:layout_marginBottom="@dimen/margin10"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="14000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeSmall"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/margin16"
                android:layout_marginTop="@dimen/margin16"
                android:id="@+id/img_sign"
                android:layout_below="@id/amount_view"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="right"
                    android:textColor="@color/theme_color"
                    android:paddingRight="@dimen/padding16"
                    android:paddingBottom="@dimen/padding10"
                    android:text="@string/received_by"
                    android:textSize="@dimen/fontSizeMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/sign"
                    android:layout_gravity="right"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

            </LinearLayout>

            <include layout="@layout/material_loader_layout" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
