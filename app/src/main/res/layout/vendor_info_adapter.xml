<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/padding4"
    android:layout_marginTop="@dimen/margin6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:id="@+id/name"
            android:textSize="@dimen/fontSizeMedium"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/phone"
                android:textSize="@dimen/fontSizeMedium"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toRightOf="@id/phone"
                android:src="@drawable/ic_baseline_call_theme" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:id="@+id/code"
                android:textSize="@dimen/fontSizeMedium"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toRightOf="@id/code"
                android:src="@drawable/ic_baseline_file_copy_20" />


        </RelativeLayout>


    </LinearLayout>

    <Button
        android:visibility="gone"
        android:textSize="@dimen/fontSizeSmall"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/button_corner_theme"
        android:layout_gravity="center"
        android:text="@string/call_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding8"/>




</LinearLayout>
