<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/l1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height90"
    android:layout_marginRight="@dimen/margin16"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:padding="@dimen/padding8"
            android:layout_gravity="center"
            android:id="@+id/service_img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/width60"
            android:layout_height="@dimen/height60"
            android:background="@drawable/image_rounded_corner" />

        <TextView
            android:gravity="center"
            android:padding="1dp"
            android:layout_gravity="center_horizontal"
            android:text="Cleaning"
            android:textColor="@color/home_service_name_color"
            android:textStyle="normal"
            android:id="@+id/service_name"
            android:textSize="@dimen/fontSizeSmall"
            android:singleLine="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>