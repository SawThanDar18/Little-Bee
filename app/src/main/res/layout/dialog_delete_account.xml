<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin24"
        android:layout_marginRight="@dimen/margin10"
        android:background="@drawable/dialog_corner"
        android:orientation="vertical"
        android:padding="@dimen/padding10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin24"
            android:gravity="center"
            android:padding="@dimen/padding2"
            android:text="Delete Account"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSizeMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin24"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete_no_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:layout_marginRight="@dimen/margin6"
                android:layout_marginBottom="@dimen/margin6"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_white_color"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall" />

            <Button
                android:id="@+id/delete_yes_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:layout_marginLeft="@dimen/margin6"
                android:layout_marginBottom="@dimen/margin6"
                android:layout_weight="1"
                android:background="@drawable/two_color_shape"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSizeSmall" />


        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/width50"
        android:layout_height="@dimen/height50"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/image_circle_shape_white_bg"
        android:src="@drawable/ic_delete_" />

</RelativeLayout>
