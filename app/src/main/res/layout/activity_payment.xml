<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/payment_tool_bar_layout" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_below="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_below="@id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/payment_timeline"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin16"
                android:layout_marginTop="@dimen/margin4"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/home_page_btn"
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height50"
                        android:layout_weight="1"
                        android:src="@drawable/service_choose_full_color" />

                    <View
                        android:layout_width="@dimen/width40"
                        android:layout_height="@dimen/height3"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/theme_color" />

                    <ImageView
                        android:id="@+id/cart_page_btn"
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height50"
                        android:layout_weight="1"
                        android:src="@drawable/shopping_cart" />

                    <View
                        android:layout_width="@dimen/width40"
                        android:layout_height="@dimen/height3"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/theme_color" />

                    <ImageView
                        android:id="@+id/address_page_btn"
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height50"
                        android:layout_weight="1"
                        android:src="@drawable/location_full_color" />

                    <View
                        android:layout_width="@dimen/width40"
                        android:layout_height="@dimen/height3"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/theme_color" />

                    <ImageView
                        android:id="@+id/final_order_page_btn"
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height50"
                        android:layout_weight="1"
                        android:src="@drawable/order_check_full_color" />

                    <View
                        android:layout_width="@dimen/width40"
                        android:layout_height="@dimen/height3"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/theme_color" />

                    <ImageView
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height50"
                        android:layout_weight="1"
                        android:src="@drawable/payment_full_color" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/conLayout"
                android:layout_below="@+id/payment_timeline"
                android:layout_marginBottom="@dimen/margin10">

                <LinearLayout
                    android:id="@+id/mView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/payment_layout"
                        android:layout_marginLeft="@dimen/margin16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin16"
                            android:paddingBottom="@dimen/padding10"
                            android:text="@string/payment_type"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeMedium"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:visibility="visible"
                            android:id="@+id/rdGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding10"
                            android:paddingBottom="@dimen/padding10">

                            <RadioButton
                                android:id="@+id/cash"
                                style="@android:style/Widget.CompoundButton.CheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/theme_color"
                                android:checked="true"
                                android:paddingRight="@dimen/padding4"
                                android:text="@string/cash"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fontSizeSmall"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/moblieBank"
                                style="@android:style/Widget.CompoundButton.CheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/theme_color"
                                android:checked="false"
                                android:paddingRight="@dimen/padding4"
                                android:text="@string/bank"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fontSizeSmall"
                                android:textStyle="bold" />

                        </RadioGroup>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin6"
                        android:layout_marginBottom="@dimen/margin6"
                        android:padding="2dp"
                        android:text="@string/total_amount_pay"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeMedium"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/viewMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cust_add"
                        android:layout_marginTop="@dimen/margin10"
                        android:background="@color/theme_color"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rec_no_f"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="@string/no"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/rec_dec"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:padding="@dimen/padding4"
                            android:text="@string/service"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/rec_discount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/padding4"
                            android:text="@string/price"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/rec_unit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:padding="@dimen/padding4"
                            android:text="@string/qty"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_marginLeft="@dimen/margin6"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/rec_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:padding="@dimen/padding4"
                            android:text="@string/disc"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/rec_amt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:padding="@dimen/padding4"
                            android:text="@string/total"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/sub_total_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_grey_stroke"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin4"
                            android:layout_weight="3.8"
                            android:gravity="right"
                            android:padding="@dimen/padding4"
                            android:text="@string/sub_total"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_marginLeft="1dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#D1CBCB" />

                        <TextView
                            android:id="@+id/sub_total_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_marginBottom="@dimen/margin10"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="20000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/discount_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tot_footer1"
                        android:background="@drawable/corner_grey_stroke"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin6"
                            android:layout_weight="3.8"
                            android:gravity="right"
                            android:padding="@dimen/padding4"
                            android:text="@string/discount"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#D1CBCB" />

                        <TextView
                            android:id="@+id/discount_total_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_marginBottom="@dimen/margin10"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="6000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/promo_discount_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tot_footer1"
                        android:background="@drawable/corner_grey_stroke"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin6"
                            android:layout_weight="3.8"
                            android:gravity="right"
                            android:padding="@dimen/padding4"
                            android:text="Promo Code Discount"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#D1CBCB" />

                        <TextView
                            android:id="@+id/promo_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_marginBottom="@dimen/margin10"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/total_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tot_footer1"
                        android:background="@drawable/corner_grey_stroke"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin6"
                            android:layout_weight="3.8"
                            android:gravity="right"
                            android:padding="@dimen/padding4"
                            android:text="@string/total_amount"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#D1CBCB" />

                        <TextView
                            android:id="@+id/total_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_marginBottom="@dimen/margin10"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="14000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSizeSmall"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/continue_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_color"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/padding15"
                    android:text="@string/continues"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSizeMedium"
                    android:textStyle="bold" />

            </LinearLayout>

            <include layout="@layout/material_loader_layout" />

        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>