<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginBottom="@dimen/margin8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin10"
        android:gravity="center_vertical"
        android:padding="@dimen/padding10"
        android:text="@string/lbl_set_profile_photo"
        android:textColor="@color/black"
        android:textSize="@dimen/fontSizeMedium" />

    <LinearLayout
        android:padding="@dimen/padding10"
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:layout_marginLeft="@dimen/margin10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width30"
            android:layout_height="@dimen/height30"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_camera_alt_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center_vertical"
            android:padding="@dimen/padding1"
            android:text="@string/lbl_take_camera_picture"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSizeSmall" />
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/padding10"
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:layout_marginLeft="@dimen/margin10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width30"
            android:layout_height="@dimen/height30"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center_vertical"
            android:padding="@dimen/padding1"
            android:text="@string/lbl_choose_from_gallery"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSizeSmall" />
    </LinearLayout>

</LinearLayout>