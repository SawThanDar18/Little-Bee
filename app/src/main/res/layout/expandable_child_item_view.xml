<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/margin6"
            android:layout_marginBottom="5dp"
            android:background="@drawable/two_color_frame"
            android:gravity="center"
            android:id="@+id/productImage"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_width="@dimen/width50"
                android:id="@+id/productIcon"
                android:backgroundTint="@color/pink_accent_color"
                app:srcCompat="@drawable/icon_cleaning__1200_x_1200_px_"
                android:padding="@dimen/padding2"
                android:layout_height="@dimen/height50" />

        </LinearLayout>

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_toRightOf="@id/productImage"
            android:padding="@dimen/padding2"
            android:text="Sofa Cleaning"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSizeSmall"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>