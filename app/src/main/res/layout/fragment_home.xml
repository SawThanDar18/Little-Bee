<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <include
                android:id="@+id/search_tool_bar"
                layout="@layout/search_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin16" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/search_tool_bar"
                android:background="@color/white"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.busybees.lauk_kaing_expert_services.Banner.BannerLayout
                        android:id="@+id/banner_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height150"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/margin16"
                        app:autoPlaying="true"
                        app:centerScale="1"
                        app:moveSpeed="1.8"
                        app:showIndicator="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin16"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/available_service"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeMedium"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_available"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin24"
                        android:layout_marginRight="@dimen/margin8" />

                    <com.busybees.lauk_kaing_expert_services.Banner.BannerLayout
                        android:id="@+id/banner_view_advertisement"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height150"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin16"
                        android:layout_marginHorizontal="@dimen/margin16"
                        app:autoPlaying="true"
                        app:centerScale="1"
                        app:moveSpeed="1.8"
                        app:showIndicator="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin16"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/home_popular"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSizeMedium"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_popular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin24"
                        android:layout_marginBottom="@dimen/margin16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin16"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/home_symn"
                        android:textAllCaps="false"
                        android:textColor="@color/home_service_title_color"
                        android:textSize="@dimen/fontSizeMedium"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_symn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin24"
                        android:layout_marginRight="20dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/footer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height130"
                        android:scaleType="centerCrop"
                        android:src="@drawable/footer_image_2"
                        android:visibility="gone" />

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/reload_page"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="@dimen/padding4"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height300"
                    android:src="@drawable/no_connection"/>

                <Button
                    android:id="@+id/btn_reload_page"
                    android:layout_marginTop="@dimen/margin8"
                    android:padding="@dimen/margin8"
                    android:textAllCaps="false"
                    android:textSize="@dimen/fontSizeMedium"
                    android:textColor="@color/white"
                    android:text="@string/reload_page"
                    android:layout_gravity="center"
                    android:background="@drawable/round_corner_theme_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height35"/>


            </LinearLayout>

            <include layout="@layout/material_loader_layout" />

            <TextView
                android:id="@+id/s_name"
                android:visibility="invisible"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>