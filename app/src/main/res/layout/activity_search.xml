<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/theme_color"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height100"
        android:orientation="horizontal">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/back_button"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_gravity="center"
            android:src="@drawable/arrow_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@color/white"
            android:inputType="text"
            android:hint="@string/feature_service"
            android:layout_marginLeft="@dimen/margin6"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text=""
            android:padding="@dimen/padding15"
            android:id="@+id/txt_search"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSizeMedium"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_gravity="center"
            android:id="@+id/search_img"
            android:layout_width="@dimen/width30"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:src="@drawable/ic_lens" />

    </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycle_search"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

      <include layout="@layout/material_loader_layout" />

  </RelativeLayout>

   <TextView
        android:id="@+id/s_name"
        android:visibility="invisible"
        android:text="hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>