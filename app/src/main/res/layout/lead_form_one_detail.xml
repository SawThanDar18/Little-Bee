<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/photos_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8"
        android:text="@string/lead_form_photo_label"
        android:textColor="@color/black"
        android:textSize="@dimen/fontSizeMedium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lead_form_one_photos_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photos_lbl"
        android:layout_marginHorizontal="@dimen/margin24"
        android:layout_marginTop="@dimen/margin4" />


</RelativeLayout>