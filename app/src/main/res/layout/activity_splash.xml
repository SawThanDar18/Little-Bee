<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ads_image"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/skip_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        android:paddingVertical="@dimen/padding4"
        android:paddingHorizontal="@dimen/padding10"
        android:orientation="horizontal"
        android:background="@drawable/skip_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textSize="@dimen/fontSizeSmall"
            android:textColor="#E8E6E6"/>

        <TextView
            android:id="@+id/skip_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 5"
            android:textSize="@dimen/fontSizeSmall"
            android:textColor="#E8E6E6" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>